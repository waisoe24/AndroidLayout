<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/image"
        android:layout_width="370dp"
        android:layout_height="260dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/flower_image"
        app:layout_constraintBottom_toTopOf="@+id/text"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"


        />

    <TextView
        android:id="@id/text"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/rectangle_button"
        android:text="MY LOVE, YOU LIKE A FLOWER"
        android:textSize="@android:dimen/app_icon_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image"

        />

    <TextView
        android:id="@+id/text1"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/text2"
        android:text="Editor's Choice"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text"


        />

    <TextView

        android:id="@+id/text3"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/text2"
        android:text="We're all alittle weird. And life is alittle weird.
         And when we find someone whose weirdnes is compatible with ours,
          we join up with them and fall into mutually satisfying weirdness-and call it love-true love.
           And in this crazy life, and through these"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text1"

        />


    <Button
        android:id="@+id/order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="350dp"
        android:background="@drawable/order"
        android:text="ORDER NOW"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text3"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:text="$ 99.9"
        android:textAllCaps="true"
        android:textColor="@android:color/holo_blue_dark"
        app:layout_constraintCircle="@id/order"
        app:layout_constraintCircleRadius="100dp"
        app:layout_constraintCircleAngle="270"
        app:layout_editor_absoluteX="100dp"
        app:layout_editor_absoluteY="100dp"
        xmlns:tools="http://schemas.android.com/tools"


        tools:ignore="MissingConstraints" />





</androidx.constraintlayout.widget.ConstraintLayout>